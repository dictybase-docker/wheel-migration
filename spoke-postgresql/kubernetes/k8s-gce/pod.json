{
    "kind":"ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "labels": {
            "database": "postgres"
        },
        "name": "postgres-db"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "database": "postgres",
            "type": "gce"
        },
        "template": {
            "metadata": {
                "labels": {
                    "database": "postgres",
                    "type": "gce"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "postgres",
                        "image": "dictybase/postgres:9.3",
                        "volumeMounts": [
                            {
                                "mountPath": "/var/lib/postgresql/data",
                                "name": "postgres-persistent-storage"
                            }
                        ],
                        "ports": [
                            {
                                "containerPort": 5432,
                                "name": "postgres"
                            }
                        ],
                        "env": [
                            {
                                "name": "PGDATA",
                                "value": "/var/lib/postgresql/data/pgdata"
                            },
                            {
                                "name": "ADMIN_USER",
                                "value": "adminuser"
                            },
                            {
                                "name": "ADMIN_PASS",
                                "value": "adminpass"
                            },
                            {
                                "name": "ADMIN_DB",
                                "value": "admindb"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "postgres-persistent-storage",
                        "gcePersistentDisk": {
                            "pdName": "database-disk",
                            "fsType": "ext4"
                        }
                    }
                ]
            }
        }
    }
}
